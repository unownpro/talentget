{
  "manifest_version": 3,
  "name": "Talent Website Utility",
  "version": "1.0",
  "description": "Enhances browsing with an embedded ChatGPT panel.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "rerun-script": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Rerun the paste script"
    },
    "toggle-gemini-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle Gemini Panel"
    }
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
